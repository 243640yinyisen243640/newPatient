<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HuaHanSoft.Fill.Wr"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        style="@style/HuaHanSoft.Fill.Wr"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="标题"
            android:textColor="@color/black_24"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/text_white"
            android:hint="请输入"
            android:maxLines="1"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingEnd="25dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black_24"
            android:textColorHint="@color/gray_8a"
            android:textSize="15sp" />

        <View
            style="@style/base_line"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/main_base_color" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_marginTop="30dp"
            android:background="#ECEBEA" />

        <LinearLayout
            style="@style/HuaHanSoft.Fill.Wr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/cancel"
                android:textColor="@color/gray_8a"
                android:textSize="16sp" />

            <View
                android:id="@+id/view"
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/background" />

            <TextView
                android:id="@+id/tv_dialog_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/sure"
                android:textColor="@color/main_base_color"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>