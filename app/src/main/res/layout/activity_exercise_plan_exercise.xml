<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="200dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/diet_programme_bg_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:max="5"
                    android:progress="5"
                    android:progressDrawable="@drawable/diet_programme_progress_bar" />

                <TextView
                    android:id="@+id/tv_diet_programme_one_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/shape_bg_black_90_20"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:text="5/5"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="55dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_bg_white_10"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="45dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:background="@color/main_base_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="运动习惯"
                        android:textColor="@color/main_base_color"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:background="@color/main_base_color" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="是否有运动习惯？ "
                    android:textColor="@color/black_24"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_exercise_exercise_habit_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:button="@null"
                        android:checked="true"
                        android:drawableStart="@drawable/selector_green_white"
                        android:drawablePadding="10dp"
                        android:paddingTop="15dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="15dp"
                        android:text="是"
                        android:textColor="@color/black_24"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/cb_exercise_exercise_habit_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:button="@null"
                        android:drawableStart="@drawable/selector_green_white"
                        android:drawablePadding="10dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:text="否"
                        android:textColor="@color/black_24"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/shape_background_5"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="是否有空腹运动？ "
                        android:textColor="@color/black_24"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_exercise_exercise_empty_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:button="@null"
                            android:checked="true"
                            android:drawableStart="@drawable/selector_green_white"
                            android:drawablePadding="10dp"
                            android:paddingTop="15dp"
                            android:paddingRight="25dp"
                            android:paddingBottom="15dp"
                            android:text="是"
                            android:textColor="@color/black_24"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/cb_exercise_exercise_empty_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:button="@null"
                            android:drawableStart="@drawable/selector_green_white"
                            android:drawablePadding="10dp"
                            android:paddingLeft="25dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:text="否"
                            android:textColor="@color/black_24"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="运动时间："
                                android:textColor="@color/black_24"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/et_exercise_exercise_time"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:digits="1234567890."
                                android:gravity="center"
                                android:hint="请输入"
                                android:maxLines="1"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:textColor="@color/black_24"
                                android:textColorHint="@color/gray_8a"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="分钟/次"
                                android:textColor="@color/black_24"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="运动频率："
                                android:textColor="@color/black_24"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/et_exercise_exercise_rate"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:background="@color/transparent"
                                android:digits="1234567890."
                                android:hint="请输入"
                                android:maxLines="1"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:textColor="@color/black_24"
                                android:textColorHint="@color/gray_8a"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="&#12288;天/周"
                                android:textColor="@color/black_24"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_exercise_exercise_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_main_gra_90"
            android:gravity="center"
            android:padding="12dp"
            android:text="生成运动方案"
            android:textColor="@color/text_white"
            android:textSize="18sp" />

    </LinearLayout>


</ScrollView>