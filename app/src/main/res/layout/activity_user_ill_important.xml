<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_bg_white_10"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="50dp">

                <TextView
                    android:id="@+id/tv_files_smoke_drink_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="疾病类型"
                    android:textColor="@color/black_24"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_user_ill_tang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_green_90_white_black_1"
                        android:button="@null"
                        android:checked="true"
                        android:paddingStart="15dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="8dp"
                        android:text="糖尿病"
                        android:textColor="@color/selector_black_24_white_ff"
                        android:textSize="15sp" />

                    <CheckBox
                        android:id="@+id/cb_user_ill_gao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/selector_green_90_white_black_1"
                        android:button="@null"
                        android:paddingStart="15dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="8dp"
                        android:text="高血压"
                        android:textColor="@color/selector_black_24_white_ff"
                        android:textSize="15sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_user_ill_important"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/user_files_gray_arrow" />

                <LinearLayout
                    android:id="@+id/ll_user_ill_important"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_defaultbackground_5"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="类型"
                        android:textColor="@color/black_24"
                        android:textSize="15sp" />

                    <com.vice.bloodpressure.view.HHAtMostGridView
                        android:id="@+id/gv_user_ill_important"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fadingEdge="none"
                        android:fadingEdgeLength="0dp"
                        android:horizontalSpacing="10dp"
                        android:listSelector="@color/transparent"
                        android:numColumns="3"
                        android:scrollbars="none"
                        android:verticalSpacing="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="确诊时间"
                        android:textColor="@color/black_24"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_user_ill_important_time"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_bg_white_black_90_1"
                        android:drawableLeft="@drawable/user_ill_time"
                        android:drawablePadding="10dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="请选择日期"
                        android:textColor="#9D9D9D"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_bg_white_10_0_10_0"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_user_ill_important_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg_main_gra_90"
                android:gravity="center"
                android:padding="12dp"
                android:text="保存"
                android:textColor="@color/text_white"
                android:textSize="16sp" />
        </LinearLayout>

    </FrameLayout>


</LinearLayout>