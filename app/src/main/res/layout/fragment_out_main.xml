<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/out_main_top_bg" />

        <LinearLayout
            android:id="@+id/ll_out_main_doctor_unband"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_bg_white_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_out_main_doctor_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/out_doctor_default_head_img" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="快来绑定您的专属医生"
                android:textColor="@color/black_2A"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_out_main_doctor_band"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_bg_main_gra_90"
                android:paddingLeft="12dp"
                android:paddingTop="9dp"
                android:paddingRight="12dp"
                android:paddingBottom="9dp"
                android:text="绑定医生"
                android:textColor="@color/text_white"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_out_main_doctor_band"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_bg_white_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_out_main_doctor_band_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/out_doctor_default_head_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_out_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="王飞飞"
                        android:textColor="@color/black_24"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_out_doctor_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:includeFontPadding="false"
                        android:text="主任医师"
                        android:textColor="@color/gray_8a"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_out_doctor_hos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/user_my_doctor_hos"
                    android:drawablePadding="10dp"
                    android:includeFontPadding="false"
                    android:text="河南省第一人民医院"
                    android:textColor="@color/gray_8a"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_bg_white_10"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_out_main_doctor_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/out_patient_education_bg" />

    </LinearLayout>

</LinearLayout>