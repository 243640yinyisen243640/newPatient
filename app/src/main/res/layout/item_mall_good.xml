<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_white_5"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:id="@+id/ll_mall_goods_click">

    <ImageView
        android:id="@+id/iv_mall_goods_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_5" />

    <TextView
        android:id="@+id/tv_mall_goods_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:text="@string/app_name"
        android:textColor="@color/black_24"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mall_goods_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_white_green_31_17_2"
            android:paddingLeft="4dp"
            android:paddingTop="3dp"
            android:paddingRight="4dp"
            android:paddingBottom="3dp"
            android:text="减重"
            android:textColor="@color/main_base_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_mall_goods_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/shape_bg_white_green_31_17_2"
            android:paddingLeft="4dp"
            android:paddingTop="3dp"
            android:paddingRight="4dp"
            android:paddingBottom="3dp"
            android:text="减重"
            android:textColor="@color/main_base_color"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mall_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥32.00"
            android:textColor="@color/red_E0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_mall_goods_price_paint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="¥34.80"
            android:textColor="@color/gray_BB"
            android:textSize="12sp" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_mall_goods_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mall_main_hot" />

        <TextView
            android:id="@+id/tv_mall_goods_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="6dp"
            android:text="已售1286"
            android:textColor="@color/gray_A5"
            android:textSize="12sp" />
    </FrameLayout>
</LinearLayout>