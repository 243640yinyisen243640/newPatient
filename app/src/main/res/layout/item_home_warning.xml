<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_warning_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_10"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_warning_xt_xy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/warning_xuetang"
                android:drawablePadding="8dp"
                android:textColor="@color/black_2A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_warning_read"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/shape_red_3_3_circle" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#EEEEEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_warning_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textColor="@color/black_24"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_warning_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="7dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/gray_8a"
                        android:textSize="13sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_warning_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9.5dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/gray_BB"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_warning_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_white_black_90_1"
                    android:paddingLeft="11dp"
                    android:paddingTop="7.5dp"
                    android:paddingRight="11dp"
                    android:paddingBottom="7.5dp"
                    android:text="删除"
                    android:textColor="@color/black_2A"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_warning_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_bg_white_green_90_1"
                    android:paddingLeft="9.5dp"
                    android:paddingTop="7.5dp"
                    android:paddingRight="9.5dp"
                    android:paddingBottom="7.5dp"
                    android:textColor="@color/main_base_color"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_warning_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:drawableLeft="@drawable/warning_gray"
            android:drawablePadding="6.5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="血糖偏高，请咨询医生，调整管理方案。"
            android:textColor="@color/gray_8a"
            android:textSize="13sp"
            android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>