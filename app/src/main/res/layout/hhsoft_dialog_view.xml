<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HuaHanSoft.Fill.Wr"
    android:background="@drawable/xysoft_shape_dialog_frame_bg"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/HuaHanSoft.Fill.Wr"
        android:padding="16dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/huahansoft_iv_dialog_icon"
            style="@style/HuaHanSoft.Wrap"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/huahansoft_tv_dialog_title"
            style="@style/HuaHanSoft.Text.Title.Fill.16"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/huahansoft_iv_dialog_icon"
            android:text="@string/tip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/huahansoft_tv_dialog_content"
        style="@style/HuaHanSoft.Fill.Wr"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp"
        android:text="确定发布该朋友圈吗？"
        android:textColor="@color/defaultBlackLight"
        android:textSize="14sp" />

    <LinearLayout
        style="@style/HuaHanSoft.Fill.Wr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/huahansoft_tv_dialog_action_neutral"
            style="@style/HuaHanSoft.Dialog.Action.Neutral"
            android:text="@string/huahansoft_dialog_more_info"
            android:visibility="visible" />

        <TextView
            android:id="@+id/huahansoft_tv_dialog_action_negative"
            style="@style/HuaHanSoft.Dialog.Action"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/huahansoft_tv_dialog_action_positive"
            style="@style/HuaHanSoft.Dialog.Action"
            android:text="@string/sure" />

    </LinearLayout>
</LinearLayout>