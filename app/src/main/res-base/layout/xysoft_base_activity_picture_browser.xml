<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_24">

    <com.vice.bloodpressure.utils.widget.PreviewViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/tv_browser_back"
            style="@style/HuaHanSoft.Wrap"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/picture_back"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_browser_position"
            style="@style/HuaHanSoft.Wrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:textColor="@color/text_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_browser_download"
            style="@style/HuaHanSoft.Wrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="下载"
            android:textColor="@color/text_white"
            android:visibility="gone" />
    </RelativeLayout>


</FrameLayout>
