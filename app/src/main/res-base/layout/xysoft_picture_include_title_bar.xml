<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/main_base_color"
    android:orientation="vertical">

    <View
        android:id="@+id/hhsoft_view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hhsoft_iv_picture_top_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:src="@drawable/base_top_back_white" />

        <TextView
            android:id="@+id/hhsoft_tv_picture_top_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="@string/hhsoft_picture_title_name"
            android:textColor="?attr/picture.title.textColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hhsoft_tv_picture_top_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/hhsoft_picture_select_info"
            android:textColor="?attr/picture.right.textColor"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>