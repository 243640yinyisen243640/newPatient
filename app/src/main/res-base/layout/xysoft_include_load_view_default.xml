<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultWhite"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/huahansoft_iv_loading_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/base_loading_anim" />

    <TextView
        android:id="@+id/huahansoft_tv_loading_first"
        style="@style/HuaHanSoft.Text.Body.Warp.16"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name" />
</LinearLayout>